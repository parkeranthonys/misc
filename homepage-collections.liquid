<section class="homepage-section animate wow fadeIn no-fouc featuredCollectionBlock">
  <div id="collection-loop" class="row">
    {% if settings.homepage-collect-title ==  blank %}
    {% else %}
      <div class="section-title lines"><h1>{{ settings.homepage-collect-title }}</h1></div>
    {% endif %}

    {% for link in linklists[settings.home-collection-linklist].links limit:4 %}
    {% assign collection = link.object %}
    <div class="collection-index desktop-3 tablet-half mobile-half{% cycle ' first', '', '', ' last' %}" data-alpha="{{ collection.title }}">
      <div class="collection-image">
        <a href="{{ collection.url }}" title="{{ collection_title }}">
          {% if collection.image %}
          <!-- {{ collection.image.src | collection_img_url: 'grande' | img_tag: collection_title }} -->
          <img loading="lazy" src="{{ collection.image.src | collection_img_url: 'grande' }}"
             alt="{{ collection.image.alt }}"
             data-src="{{ collection.image.src | collection_img_url: 'grande' }}"/>
          {% else %}
          {{ collection.products.first.featured_image | product_img_url: 'grande' | img_tag: collection_title }}
          {% endif %}
        </a>
      </div>
      <div class="collection-info">
        <a href="{{ collection.url }}" title="{{ link.title }}">{{ link.title }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<style type="text/css">
  .featuredCollectionBlock .collection-info{
    position: relative;
    top: 0%;
    margin-top: 0px;
    background: transparent;
    padding-top: 0px;
    color:#000;
    text-decoration:underline;
    text-transform:uppercase;
    font-weight: bold;
    font-size:14px;
  }
</style>
